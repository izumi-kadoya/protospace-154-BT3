<main class="main">
  <div class="inner">
    <div class="greeting">
      <% if user_signed_in? %>  
        こんにちは、
        <%= current_user.username %> さん
        <%# <%= link_to "#{current_user.username}さん", マイページへのroot_path, class: :greeting__link %>
      <% end %>
    </div>
    <%# // ログインしているときは上記を表示する %>
    <div class="card__wrapper">
      <% @prototypes.each do |prototype| %>
        <%= render partial: '/user/show', locals: { prototype: prototype } %>
      <% end %>
    </div>
  </div>
</main>
