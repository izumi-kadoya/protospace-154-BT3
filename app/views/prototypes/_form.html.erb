<%= form_with model: @prototype, local: true do |f|%>
  <div class="field">
    <%= f.label :protoname, "プロトタイプの名称" %><br />
    <%= f.text_field :protoname, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :catchcopy, "キャッチコピー" %><br />
    <%= f.text_area :catchcopy, class: :form_text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :concept, "コンセプト" %><br />
    <%= f.text_area :concept, class: :form_text, id:"prototype_concept" %>
  </div>

  <div class="field">
    <%= f.label :image_tag, "プロトタイプの画像" %><br />
    <%= f.file_field :image_tag, id:"prototype_image" %>
  </div>
   <%= image_tag field.image, class: 'field_image' if field.image.attached? %>

  <div class="actions">
    <%= f.submit "保存する", class: :form_btn  %>
  </div>
<% end %>